public class Cadastro {

	static ArrayList<Produto> listaProdutos = new ArrayList<Produto>();
	static ArrayList<Cliente> listaClientes = new ArrayList<Cliente>();
	static ArrayList<Venda> listaVendas = new ArrayList<Venda>();
	
	
	public static void incluirCliente (Cliente cliente) {
		System.out.println("\n" + "Incluir cliente.");
		String cpf;
		int codigo;
		
		while(true) 
		{
			codigo = Console.readInt("Informe o codigo");
			
			Cliente objcliente = pesqClienteCod(codigo);
			if (objcliente!=null) 
			{
				System.out.println("Já existe cliente para o codigo");
				continue;
			} else break;
		}
		while(true) 
		{
			cpf = Console.readLine("CPF: ");
			if(!LtpUtil.validarCPF(cpf)) 
			{
				System.out.println("CPF inválida");
				continue;
			}
			Cliente objcliente = pesqClienteCpf(cpf);
			if (objcliente!=null) 
			{
				System.out.println("Já existe cliente para o CPF");
				continue;
			} else break;
		}
		String nome;
		String telefone;
		String email;
		while (true) 
		{
			nome = Console.readLine("Nome: ").trim();
			if (nome.isEmpty()) 
			{
				System.out.println("Falta informar o nome.");
			} else break;
		}
		while (true) 
		{
			telefone = Console.readLine("Telefone: ");
			if (telefone.isEmpty()) 
			{
				System.out.println("Falta informar o telefone.");
			} else break;
		}
		while (true) 
		{
			email = Console.readLine("E-mail: ");
			if (email.isEmpty()) 
			{
				System.out.println("Falta informar o e-mail.");
			} else break;
		}
		GregorianCalendar dataInclusao = new GregorianCalendar();
		while(true) {
			String data = Console.readLine("Data de entrada: ");
			if(!LtpUtil.validarData(data, dataInclusao)) {
				System.out.println("Data inválida.");
				continue;
			}
			if (dataInclusao.after(new GregorianCalendar())) {
				System.out.println("Data entrada superior a data de hoje");
			} else break;
		}
		GregorianCalendar dataAlteracao = new GregorianCalendar();
		while(true) {
			String data = Console.readLine("Data de alteracao: ");
			if(!LtpUtil.validarData(data, dataAlteracao)) {
				System.out.println("Data inválida.");
				continue;
			}
			if (dataAlteracao.after(new GregorianCalendar())) {
				System.out.println("Data entrada superior a data de hoje");
			} else break;
		}
		
		ArrayList<Cliente> clientes = new ArrayList<Cliente>();
		clientes.add(new Cliente(codigo, cpf, nome, telefone, email, dataInclusao, dataAlteracao));
		System.out.println("\nSócio cadastrado.");
	}
	
